# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[{LICENSE,Pipfile,Pipfile.lock}]
insert_final_newline = false

[Makefile]
indent_style = tab
insert_final_newline = false

[*.{yml,yaml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = false
